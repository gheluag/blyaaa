<Window x:Class="HOSPITALDATA.AddPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HOSPITALDATA"
        mc:Ignorable="d"
        Title="AddPatient" Height="450" Width="400">
    <StackPanel>
        <TextBlock Text="Фамилия" Margin="10"/>
        <TextBox x:Name="lastnameTb" Margin="10" Height="20"/>
        <TextBlock Text="Имя" Margin="10"/>
        <TextBox x:Name="firstnameTb" Margin="10" Height="20"/>
        <TextBlock Text="Номер телефона" Margin="10"/>
        <TextBox x:Name="phoneTb" Margin="10" Height="20"/>
        <TextBlock Text="Адрес" Margin="10"/>
        <TextBox x:Name="adressTb" Margin="10" Height="20"/>
        <DatePicker x:Name="datePick" Margin="10"/>
        <Button x:Name="add_btn" Content="добавить" FontSize="15" Width="100" Background="#F0B49D" Margin="10" Click="add_btn_Click"/>
    </StackPanel>
</Window>
